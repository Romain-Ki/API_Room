generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int       @id @default(autoincrement())
  name    String
  email   String    @unique
  Booking Booking[]
}

model Room {
  id        Int       @id @default(autoincrement())
  name      String
  capacity  Int
  features  Json
  rules     Json
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Booking   Booking[]
}

model Booking {
  id     Int      @id @default(autoincrement())
  start  DateTime
  end    DateTime
  userId Int
  user   User     @relation(fields: [userId], references: [id])
  roomId Int
  room   Room     @relation(fields: [roomId], references: [id])

  @@map("bookings")
}
